{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "express"],
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/test/**/*.ts",
    "src/test/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "coverage"
  ]
} 