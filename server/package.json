{
  "name": "server",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "@ai-sdk/google": "^1.1.6",
    "@ai-sdk/provider": "^1.0.6",
    "@google-cloud/firestore": "^7.1.0",
    "@google/generative-ai": "^0.21.0",
    "@solana/web3.js": "^1.98.0",
    "@types/cookiejar": "^2.1.5",
    "@types/express": "^4.17.3",
    "@types/methods": "^1.1.4",
    "@types/superagent": "^8.1.9",
    "ai": "^4.1.10",
    "axios": "^1.7.9",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "module-alias": "^2.2.3",
    "superagent": "^8.1.2",
    "technicalindicators": "^3.1.0",
    "tweetnacl": "^1.0.3",
    "zod": "^3.24.1",
    "mongodb": "^5.0.0",
    "@types/mongodb": "^4.0.7"
  },
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "rimraf lib && tsc -p config/typescript/tsconfig.json && cp -r src/public lib/",
    "build:watch": "tsc -p config/typescript/tsconfig.json --watch",
    "lint": "eslint --ext .js,.ts . --config config/eslint/.eslintrc.js",
    "serve": "npm run build && dotenv -e env/.env.test -- firebase emulators:start --only functions,firestore",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "predeploy": "npm run build",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --config config/jest/jest.config.js --runInBand --detectOpenHandles",
    "test:watch": "jest --config config/jest/jest.config.js --watch",
    "test:ci": "jest --config config/jest/jest.config.js --ci --coverage",
    "test:verbose": "jest --config config/jest/jest.config.js --verbose --detectOpenHandles --runInBand",
    "test:single": "jest --config config/jest/jest.config.js --verbose --detectOpenHandles --runInBand",
    "test:mongodb": "node scripts/test-mongodb-connection.js",
    "test:mongodb:services": "node scripts/test-mongodb-services.js",
    "mongodb:indexes": "node scripts/create-mongodb-indexes.js",
    "kill-ports": "kill-port 5001 8080 8085 9229 5000 8081 9000 9090 9099 4000 4400 4500"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.68",
    "@types/node-fetch": "^2.6.12",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^7.4.4",
    "eslint": "^8.55.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.29.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "private": true
}
